{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "module": "ESNext",
    "target": "ES2016",
    "lib": ["es2020", "dom"],
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "jest", "@testing-library/jest-dom"
    ],
  },
  "exclude": [
    "**/README.md"
  ]
}
